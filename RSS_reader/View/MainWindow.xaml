<Window x:Class="RSS_reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:RSS_reader"
        
        mc:Ignorable="d"
        Title="Media2 RSS reader" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="29*"/>
                <RowDefinition Height="391*"/>
            </Grid.RowDefinitions>


            <ComboBox ItemsSource="{Binding categories}" Margin="10,10,0,0" Grid.RowSpan="2" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="349" >
                <ComboBox.ItemTemplate >
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding category}"/>
                            <CheckBox x:Name="CheckBoxOFCategories" VerticalAlignment="Center" IsChecked="{Binding isChecked}"/>

                        </StackPanel>


                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>




        </Grid>


    </Grid>
</Window>
